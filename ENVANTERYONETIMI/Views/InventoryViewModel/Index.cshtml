@model IEnumerable<ENVANTERYONETIMI.Models.InventoryViewModel>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Table</title>
    <link rel="stylesheet" type="text/css" href="~/css/InventoryViewModel.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
</head>
<body>
    <div class="col-11">
         <div class="container">
            <h1 class="header">Inventory List</h1>
            <div class="row">
                <form class="filterForm">
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <input id="box1" type="checkbox" value="ProductID" />
                            <label for="box1">Product ID</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box2" type="checkbox" value="CategoryID" />
                            <label for="box2">Category ID</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box3" type="checkbox" value="InventoryID" />
                            <label for="box3">Inventory ID</label>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <input id="box4" type="checkbox" value="SubcategoryID" />
                            <label for="box4">Subcategory ID</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box5" type="checkbox" value="ProductName" />
                            <label for="box5">Product Name</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box6" type="checkbox" value="SafetyStockLevel" />
                            <label for="box6">Safety Stock Level</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <input id="box7" type="checkbox" value="FinishedGoodsFlag" />
                            <label for="box7">Finished Goods Flag</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box8" type="checkbox" value="StandartCost" />
                            <label for="box8">Standart Cost</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box9" type="checkbox" value="ListPrice" />
                            <label for="box9">List Price</label>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4 form-group">
                            <input id="box10" type="checkbox" value="CategoryName" />
                            <label for="box10">Category Name</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box11" type="checkbox" value="Quantity" />
                            <label for="box11">Quantity</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box12" type="checkbox" value="Shelf" />
                            <label for="box12">Shelf</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <input id="box13" type="checkbox" value="Bin" />
                            <label for="box13">Bin</label>
                        </div>
                        <div class="col-md-4 form-group">
                            <input id="box14" type="checkbox" value="SubcategoryName" />
                            <label for="box14">Sub Category Name</label>
                        </div>

                    </div>

                    <button type="button" class="btn " onclick="submitForm(event)">Tablo Oluştur</button>

                </form>



            </div>

            <div class="row">
                <div id="tableContainer" class="table">
                    <!-- Dinamik tablo burada gösterilecek -->
                </div>
            </div>
        </div>
        
    </div>

    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/InvIndex.js" asp-append-version="true"></script>
</body>
</html>

