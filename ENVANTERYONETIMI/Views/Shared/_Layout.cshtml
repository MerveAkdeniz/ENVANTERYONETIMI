<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ENVANTERYONETIMI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ENVANTERYONETIMI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

</head>
<body >
    <div class="container-fluid">
        <div class="row ">
            <div class="col-2 sidebar">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                    <div class="container-fluid flex-column">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inventory<br/>Management</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse  flex-column ">
                            <ul class="navbar-nav w-100">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home" style="margin-right: 15px;font-size:25px;"></i>Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="InventoryViewModel" asp-action="Index"><i class="fa-solid fa-warehouse" style="margin-right: 15px;font-size:25px;"></i>Envanter Takip</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
           </div>
            <div class="col-10 main">
                <div class="contrainer">
                    <div class="row col-8">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                    
                </div>
                
           </div>
       </div>
   </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
